@{
    ViewData["Title"] = "Search Results";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h2>Search Results</h2>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <p>Genre: @ViewData["genre"]</p>
        </div>
    </div>
    @foreach (var movie in ViewData["movies"] as IList<Notflix.Controllers.Movie>)
    {
        <div class="row">
            <div class="col">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="container">
                            <div class="row">
                                <div class="col">
                                    <h5 class="card-title">@movie.title</h5>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <p class="card-text"><small class="text-muted">@movie.releaseDate</small></p>
                                    <p class="card-text">@movie.overview</p>
                                </div>
                                <div class="col-2">
                                    <img src="@movie.posterPath" style="max-width: 100%; height: auto;" alt="poster">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
